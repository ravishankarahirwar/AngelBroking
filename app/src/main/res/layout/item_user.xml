<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="8dp">


        <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/transaction_icon"
                android:layout_marginStart="8dp"
                android:padding="8dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_location_city_black_24dp"
                android:scaleType="fitCenter"
                android:elevation="6dp"
                android:background="@drawable/circle_length_unselected"
/>

        <TextView
                android:id="@+id/transaction_name"
                android:text="Sony Play Station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/transaction_icon"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="#de151c2a"
                />

        <TextView
                android:id="@+id/transaction_detail"
                android:text="Fifa 2022 Game"
                android:layout_below="@+id/transaction_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="#7e8eaa"
                tools:text="Salary for March"
                android:textSize="10sp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/transaction_icon"
        />

    <TextView
            android:id="@+id/transaction_dc"
            android:text="-"
            android:layout_marginRight="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/transaction_currency"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="#ee6b8d"
            android:gravity="end"
            android:textSize="16sp"
    />

    <TextView
            android:id="@+id/transaction_currency"
            android:text="$"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/transaction_amt"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="#ee6b8d"
            android:gravity="end"
            android:textSize="16sp"
    />

        <TextView
                android:id="@+id/transaction_amt"
                android:text="53.95"
                android:layout_marginRight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="#ee6b8d"
                android:gravity="end"
                android:textSize="16sp"
        />

        <TextView
                android:id="@+id/transaction_date"
                android:layout_below="@+id/transaction_amt"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="March 14, 2021"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="#7e8eaa"
        />

</RelativeLayout>

