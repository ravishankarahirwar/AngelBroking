<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:elevation="16dp"
        card_view:cardElevation="8dp"
        card_view:cardCornerRadius="4dp">

<RelativeLayout
        android:id="@+id/row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:layout_margin="8dp">


            <TextView
                android:id="@+id/wallet_name"
                android:text="Sony Play Station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/transaction_icon"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="#7e8eaa"
                />

    <TextView
            android:id="@+id/wallet_currency"
            android:text="$"
            android:layout_below="@+id/wallet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="#de151c2a"
            android:textSize="16sp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
    />

        <TextView
                android:id="@+id/wallet_amount"
                android:layout_below="@+id/wallet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="#de151c2a"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/wallet_currency"
        />

        <TextView
                android:id="@+id/wallet_status"
                android:text="+"
                android:layout_marginRight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/transaction_detail"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="#ee6b8d"
                android:gravity="end"
                android:textSize="16sp"
        />

        <TextView
                android:id="@+id/wallet_progress_percentage"
                android:layout_below="@+id/wallet_status"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="32%"
                android:layout_marginRight="16dp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="#7e8eaa"
        />

        <ProgressBar
                android:id="@+id/progress"
                android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     style="?android:attr/progressBarStyleHorizontal"
                     android:progress="50"
                     android:layout_below="@+id/wallet_progress_percentage"
                     android:layout_marginRight="16dp"
                     android:layout_marginLeft="16dp"

        />

</RelativeLayout>
</android.support.v7.widget.CardView>